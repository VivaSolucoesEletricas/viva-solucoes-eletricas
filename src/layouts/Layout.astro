---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />

    <meta
      name="description"
      content="A VIVA Soluções oferece energia solar de qualidade, segurança e atendimento personalizado. Reduza sua conta de energia elétrica e valorize seu imóvel com nossos sistemas fotovoltaicos."
    />
    <meta
      name="keywords"
      content="Energia solar, VIVA Soluções, energia renovável, redução de conta de energia, sistema fotovoltaico, instalação de usinas solares, carregador veicular, energia limpa, manutenção de usinas solares, energia para residencial, energia para comercial, energia para industrial, energia para rural"
    />

    <meta
      property="og:title"
      content="VIVA Soluções - Energia Solar Limpa e Renovável com Alta Qualidade e Segurança"
    />
    <meta
      property="og:description"
      content="A VIVA Soluções oferece energia solar de qualidade, segurança e atendimento personalizado. Reduza sua conta de energia elétrica e valorize seu imóvel com nossos sistemas fotovoltaicos."
    />
    <meta property="og:image" content="URL_da_Imagem_Representativa" />
    <meta property="og:url" content="https://vivasolucoeseletricas.com.br" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="VIVA Soluções - Energia Solar Limpa e Renovável com Alta Qualidade e Segurança"
    />
    <meta
      name="twitter:description"
      content="A VIVA Soluções oferece energia solar de qualidade, segurança e atendimento personalizado. Reduza sua conta de energia elétrica e valorize seu imóvel com nossos sistemas fotovoltaicos."
    />
    <meta name="twitter:image:width" content="1200" />
    <meta name="twitter:image:height" content="600" />
    <meta name="twitter:image" content="URL_da_Imagem_Representativa" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "VIVA Soluções",
        "url": "https://www.vivasolucoes.com.br",
        "logo": "https://www.vivasolucoes.com.br/logo.png",
        "sameAs": ["https://www.instagram.com/solarsolucoes"],
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+55-xx-xxxx-xxxx",
          "contactType": "Customer Service"
        }
      }
    </script>

    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-screen">
    <slot />
  </body>
</html>
